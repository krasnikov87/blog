extends layout

block content
  div(class="h-600x h-sm-auto")
    div(class="h-2-3 h-sm-auto oflow-hidden")
      if articles.length >= 1
        div(class="pb-5 pr-5 pr-sm-0 float-left float-sm-none w-2-3 w-sm-100 h-100 h-sm-300x")
          a(class="pos-relative h-100 dplay-block" href="#")
            div(class="img-bg bg-1 bg-grad-layer-6")
            div(class="abs-blr color-white p-20 bg-sm-color-7")
              h3(class="mb-15 mb-sm-5 font-sm-13")
                b Peter Thiels VC Found Invests Million into Bitcoin, Market Reacts
              ul(class="list-li-mr-20")
                li by
                  span(class="color-primary")
                    b Olivia Capzallo
                  Jan 25, 2018
        if articles.length >= 2
          div(class="float-left float-sm-none w-1-3 w-sm-100 h-100 h-sm-600x")
            div(class="pl-5 pb-5 pl-sm-0 ptb-sm-5 pos-relative h-50")
              a(class="pos-relative h-100 dplay-block" href="#")
                div(class="img-bg bg-1 bg-grad-layer-6")
                  div(class="abs-blr color-white p-20 bg-sm-color-7")
                    h4(class="mb-15 mb-sm-5 font-sm-13")
                      b Peter Thiels VC Found Invests Million into Bitcoin, Market Reacts
                    ul(class="list-li-mr-20")
                      li by
                        span(class="color-primary")
                          b Olivia Capzallo
                        Jan 25, 2018
            if articles.length >= 3
              div(class="pl-5 pb-5 pl-sm-0 ptb-sm-5 pos-relative h-50")
                a(class="pos-relative h-100 dplay-block" href="#")
                  div(class="img-bg bg-1 bg-grad-layer-6")
                    div(class="abs-blr color-white p-20 bg-sm-color-7")
                      h4(class="mb-15 mb-sm-5 font-sm-13")
                        b Peter Thiels VC Found Invests Million into Bitcoin, Market Reacts
                      ul(class="list-li-mr-20")
                        li by
                          span(class="color-primary")
                            b Olivia Capzallo
                          Jan 25, 2018
    if articles.length >= 4
      div(class="h-1-3 oflow-hidden pb-10")
        div(class="plr-5 plr-sm-0 pt-5 pt-sm-10 float-left float-sm-none pos-relative w-1-3 w-sm-100 h-100 h-sm-300x")
          a(class="pos-relative h-100 dplay-block" href="#")
            div(class="img-bg bg-1 bg-grad-layer-6")
              div(class="abs-blr color-white p-20 bg-sm-color-7")
                h4(class="mb-15 mb-sm-5 font-sm-13")
                  b Peter Thiels VC Found Invests Million into Bitcoin, Market Reacts
                ul(class="list-li-mr-20")
                  li by
                    span(class="color-primary")
                      b Olivia Capzallo
                    Jan 25, 2018
      if articles.length >= 5
        div(class="plr-5 plr-sm-0 pt-5 pt-sm-10 float-left float-sm-none pos-relative w-1-3 w-sm-100 h-100 h-sm-300x")
          a(class="pos-relative h-100 dplay-block" href="#")
            div(class="img-bg bg-1 bg-grad-layer-6")
              div(class="abs-blr color-white p-20 bg-sm-color-7")
                h4(class="mb-15 mb-sm-5 font-sm-13")
                  b Peter Thiels VC Found Invests Million into Bitcoin, Market Reacts
                ul(class="list-li-mr-20")
                  li by
                    span(class="color-primary")
                      b Olivia Capzallo
                    Jan 25, 2018
      if articles.length >= 6
        div(class="plr-5 plr-sm-0 pt-5 pt-sm-10 float-left float-sm-none pos-relative w-1-3 w-sm-100 h-100 h-sm-300x")
          a(class="pos-relative h-100 dplay-block" href="#")
            div(class="img-bg bg-1 bg-grad-layer-6")
              div(class="abs-blr color-white p-20 bg-sm-color-7")
                h4(class="mb-15 mb-sm-5 font-sm-13")
                  b Peter Thiels VC Found Invests Million into Bitcoin, Market Reacts
                ul(class="list-li-mr-20")
                  li by
                    span(class="color-primary")
                      b Olivia Capzallo
                    Jan 25, 2018
  section
    div(class="container")
      div(class="row")
        div(class="col-md-12 col-lg-8")
          div(class="row")
            each article in articles
              div(class="col-sm-6")
                a(href="post/" + article.slug)
                  img(src="images/crypto-news-6-600x450.jpg" alt="")
                h4(class="pt-20")
                  a(href="post/" + article.slug)
                    = article.title
                ul(class="list-li-mr-20 pt-10 mb-30")
                  li(class="color-lite-black")
                    = moment(article.createdAt).format("DD/MM/YYYY")